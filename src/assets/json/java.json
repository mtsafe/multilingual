{
  "comments": [
    { "single-line": "begins with double slash as:\n\t// the comment" },
    { "multi-line": "enclosed as\n\t/* the comment */" },
    {
      "documentation comment": "enclosed as\n\t/** the documentation comment */"
    }
  ],
  "loops": [
    {
      "while": "while (condition) {\n\tstatement(s)\n}"
